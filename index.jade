//- 技能模板
mixin skill(content) 
    skill
        block
        .content=content
mixin skillUnlocking(content) 
    skill.unlocking
        i.icons
            block
            i.lock.icon
        .content=content
//- 作品模板
mixin works(img,header,description,link) 
    a.ts.card(href=link)
        .image
            img(src=img)
        .content
            .header=header
            .description=description

